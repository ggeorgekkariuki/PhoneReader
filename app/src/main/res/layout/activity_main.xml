<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.phoneread.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emailView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example@email.com"
        android:textAppearance="?android:textAppearanceMedium"
        android:fontFamily="casual" />
    <TextView
        android:fontFamily="cursive"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/phoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0723123123"
        app:layout_constraintBottom_toBottomOf="@id/emailView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/IMEIView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11223344556"
        android:textAppearance="?android:textAppearanceMedium"
        android:fontFamily="casual" />
    <TextView
        android:fontFamily="cursive"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/serviceProviderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airtel" />
    <TextView
        android:fontFamily="cursive"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/simSerialNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0001122333" />

</LinearLayout>
